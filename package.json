{
  "name": "sandbox",
  "version": "0.2.0",
  "description": "A responsive, scalable, and easy to use CSS framework.",
  "main": "scss/sandbox.scss",
  "scripts": {
    "build-compressed": "scss scss/sandbox.scss dist/sandbox-min.css --style compressed",
    "build-autoprefix": "node_modules/.bin/postcss dist/sandbox-min.css --use autoprefixer --map true --output dist/sandbox-min.css",
    "build": "npm run build-compressed && npm run build-autoprefix",
    "open-root": "open -a 'Sublime Text' package.json scss/sandbox.scss",
    "open-base": "open -a 'Sublime Text' scss/base/*.scss",
    "open-utilities": "open -a 'Sublime Text' scss/utilities/*.scss",
    "open-layout": "open -a 'Sublime Text' scss/layout/*.scss",
    "open-buttons": "open -a 'Sublime Text' scss/buttons/*.scss",
    "open-forms": "open -a 'Sublime Text' scss/forms/*.scss",
    "open-themes": "open -a 'Sublime Text' scss/themes/*.scss",
    "open-components": "open -a 'Sublime Text' scss/components/*.scss",
    "open-sandbox": "npm run open-root && npm run open-base && npm run open-layout && npm run open-buttons && npm run open-forms && npm run open-components && npm run open-utilities && npm run open-themes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dlcNine/sandbox.git"
  },
  "keywords": [
    "sandbox",
    "css",
    "framework",
    "responsive",
    "scalable"
  ],
  "author": "Dan Cross",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dlcNine/sandbox/issues"
  },
  "homepage": "https://github.com/dlcNine/sandbox#readme",
  "devDependencies": {
    "autoprefixer": "^7.2.3",
    "postcss": "^6.0.14",
    "postcss-cli": "^4.1.1"
  }
}
